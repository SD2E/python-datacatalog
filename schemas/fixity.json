{
    "$id": "https://sd2e.github.io/python-datacatalog/schemas/fixity.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "description": "Fixity record for an uploaded or generated file",
    "properties": {
        "checksum": {
            "type": "string"
        },
        "created": {
            "format": "date-time",
            "type": "string"
        },
        "filename": {
            "description": "Filename",
            "pattern": ".*\\..*",
            "type": "string"
        },
        "id": {
            "$ref": "identifier.json",
            "description": "Distinguishing identifier for the specified document"
        },
        "level": {
            "$ref": "processing_level.json"
        },
        "size": {
            "type": "integer"
        },
        "type": {
            "$ref": "filetype_label.json",
            "description": "Enumerated file type"
        },
        "updated": {
            "format": "date-time",
            "type": "string"
        },
        "version": {
            "type": "integer"
        }
    },
    "required": [
        "filename",
        "type"
    ],
    "title": "File",
    "type": "object"
}