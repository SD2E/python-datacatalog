{
    "$id": "https://sd2e.github.io/python-datacatalog/schemas/pipeline.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "collections_level": {
            "description": "Type of managed document collection",
            "enum": [
                "reference",
                "challenge_problem",
                "experiment",
                "sample",
                "measurement",
                "file",
                "pipeline",
                "job",
                "product"
            ],
            "type": "string"
        },
        "pipeline_type": {
            "default": "primary-etl",
            "description": "Enumerated class of action performed by the pipeline",
            "enum": [
                "generic-process",
                "data-transfer",
                "metadata-management",
                "primary-etl",
                "secondary-etl"
            ],
            "type": "string"
        }
    },
    "description": "A computation or processing Pipeline definition",
    "properties": {
        "_admin": {
            "owner": {
                "$comment": "Computed automatically",
                "description": "TACC.cloud username that created or manages the record",
                "type": "string",
                "value": "admin"
            },
            "project": {
                "description": "Project within specified TACC.cloud tenant",
                "readOnly": true,
                "type": "string",
                "value": "SD2"
            },
            "tenant": {
                "description": "TACC.cloud tenant",
                "enum": [
                    "3dem",
                    "designsafe",
                    "iplantc.org",
                    "irec",
                    "portals",
                    "vdjserver.org",
                    "sd2e",
                    "sgci",
                    "tacc.prod"
                ],
                "readOnly": true,
                "type": "string",
                "value": "sd2e"
            },
            "type": "object"
        },
        "_properties": {
            "created_date": {
                "$comment": "Computed automatically",
                "format": "date-time",
                "type": "string"
            },
            "modified_date": {
                "$comment": "Computed automatically",
                "format": "date-time",
                "type": "string"
            },
            "revision": {
                "$comment": "Computed automatically",
                "type": "number"
            },
            "type": "object"
        },
        "_visible": {
            "type": "boolean",
            "value": true
        },
        "accepts": {
            "default": [
                "*"
            ],
            "description": "file types accepted by the pipeline",
            "items": {
                "$ref": "filetype_label.json"
            },
            "type": "array"
        },
        "child_of": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "collections_levels": {
            "default": [],
            "description": "level(s) of data input that the pipeline acts upon",
            "items": {
                "$ref": "#/definitions/collections_level"
            },
            "type": "array"
        },
        "components": {
            "description": "Unordered array of pipeline components (required)",
            "items": {
                "anyOf": [
                    {
                        "$ref": "agave_app.json"
                    },
                    {
                        "$ref": "abaco_actor.json"
                    },
                    {
                        "$ref": "web_service.json"
                    },
                    {
                        "$ref": "deployed_container.json"
                    }
                ]
            },
            "type": "array"
        },
        "description": {
            "type": "string"
        },
        "id": {
            "$ref": "identifier.json",
            "description": "Distinguishing identifier for the specified document"
        },
        "name": {
            "type": "string"
        },
        "processing_levels": {
            "default": [],
            "description": "level(s) of data product produced by the pipeline",
            "items": {
                "$ref": "processing_level.json"
            },
            "type": "array"
        },
        "produces": {
            "default": [
                "*"
            ],
            "description": "file types produced by the pipeline",
            "items": {
                "$ref": "filetype_label.json"
            },
            "type": "array"
        },
        "type": {
            "items": {
                "$ref": "#/definitions/pipeline_type"
            }
        },
        "uuid": {
            "$ref": "pipeline_uuid.json"
        },
        "visible": {
            "default": true,
            "type": "boolean"
        }
    },
    "required": [
        "name",
        "components"
    ],
    "title": "PipelinesDefinition",
    "type": "object"
}