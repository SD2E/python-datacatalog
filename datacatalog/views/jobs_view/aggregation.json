{
    "view_on": "pipelines",
    "pipeline": [
        {
            "$lookup": {
                "from": "jobs",
                "localField": "uuid",
                "foreignField": "pipeline_uuid",
                "as": "job"
            }
        },
        {
            "$unwind": {
                "path": "$job",
                "preserveNullAndEmptyArrays": false
            }
        }
    ]
}
