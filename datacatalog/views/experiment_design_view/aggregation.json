{
    "view_on": "challenges",
    "pipeline": [
        {
            "$lookup": {
                "from": "experiment_designs",
                "localField": "uuid",
                "foreignField": "child_of",
                "as": "experiment_design"
            }
        },
        {
            "$unwind": {
                "path": "$experiment_design",
                "preserveNullAndEmptyArrays": true
            }
        },
        {
            "$project": {
                "_admin": 0.0,
                "_properties": 0.0,
                "_salt": 0.0,
                "status": 0.0,
                "created": 0.0,
                "updated": 0.0,
                "experiment_design._admin": 0,
                "experiment_design._properties": 0,
                "experiment_design._salt": 0
            }
        }
    ]
}
