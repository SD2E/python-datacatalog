{
    "view_on": "experiment_design_view",
    "pipeline": [
        {
            "$lookup": {
                "from": "experiments",
                "localField": "experiment_design.uuid",
                "foreignField": "child_of",
                "as": "experiment"
            }
        },
        {
            "$unwind": {
                "path": "$experiment",
                "preserveNullAndEmptyArrays": true
            }
        },
        {
            "$project": {
                "_admin": 0.0,
                "_properties": 0.0,
                "_salt": 0.0,
                "experiment._admin": 0,
                "experiment._properties": 0,
                "experiment._salt": 0
            }
        }
    ]
}
