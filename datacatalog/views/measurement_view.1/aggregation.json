{
    "view_on": "measurement_view",
    "pipeline": [
        {
            "$lookup": {
                "from": "files",
                "localField": "measurement.uuid",
                "foreignField": "child_of",
                "as": "upload"
            }
        },
        {
            "$project": {
                "_admin": 0.0,
                "_properties": 0.0,
                "_salt": 0.0
            }
        },
        {
            "$unwind": {
                "path": "$upload",
                "preserveNullAndEmptyArrays": true
            }
        }
    ]
}
