            "type": "string"
        },
        "level": {
            "$ref": "processing_level.json"
        },
        "filename": {
            "description": "Filename",
            "pattern": ".*\\..*",
            "type": "string"
        },
        "type": {
            "description": "Enumerated file type",
            "$ref": "filetype_label.json"
        },
        "child_of": {
            "items": {
                "anyOf": [
                    {
                        "$ref": "measurement_uuid.json"
                    },
                    {
                        "$ref": "sample_uuid.json"
                    },
                    {
                        "$ref": "experiment_uuid.json"
                    },
                    {
                        "$ref": "job_uuid.json"
                    }
                ]
            },
            "type": "array"
        }
    },
    "required": [
        "filename",
        "type",
        "uuid",
        "child_of"
    ],
    "type": "object",
    "_filename": "file",
    "__collection": "files",
    "__indexes": []
