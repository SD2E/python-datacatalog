{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Description and history of a computing job",
    "type": "object",
    "properties": {
        "pipeline_uuid": {
            "description": "UUID of the pipeline which spawned this job",
            "$ref": "pipeline_uuid.json"
        },
        "archive_path": {
            "description": "Path to the job's outputs",
            "type": "string"
        },
        "data": {
            "description": "Initial run-time parameterization of the job",
            "type": "object"
        },
        "actor_id": {
            "$ref": "abaco_actorid.json"
        },
        "session": {
            "description": "Short alphanumeric correlation string (optional)",
            "type": "string"
        },
        "updated": {
            "format": "date-time",
            "type": "string",
            "description": "When the job record was last updated"
        },
        "_visible": {
            "type": "boolean",
            "default": true
        },
        "generated_by": {
            "type": "array",
            "items": {
                "$ref": "pipeline_uuid.json"
            }
        },
        "_history": {
            "description": "Annotated history of job events",
            "type": "array",
            "items": {
                "$ref": "pipelinejob_event.json"
            }
        }
    },
    "required": [
        "pipeline_uuid",
        "archive_path",
        "data"
    ],
    "_filename": "pipelinejob",
    "__uuid_type": "pipelinejob",
    "__uuid_field": null,
    "__uuid_fields": [
        "session",
        "data",
        "actor_id",
        "pipeline_uuid"
    ],
    "__collection": "jobs",
    "__indexes": [],
    "__identifiers": [
        "uuid"
    ],
    "additionalProperties": false
}
