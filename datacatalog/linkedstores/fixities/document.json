{
    "additionalProperties": false,
    "title": "File",
    "description": "Fixity record for an uploaded or generated file",
    "properties": {
        "uuid": {
            "$ref": "file_uuid.json"
        },
        "level": {
            "$ref": "processing_level.json"
        },
        "filename": {
            "description": "Filename",
            "pattern": ".*\\..*",
            "type": "string"
        },
        "type": {
            "description": "Enumerated file type",
            "$ref": "filetype_label.json",
            "$comment": "Computed automatically"
        },
        "created": {
            "format": "date-time",
            "type": "string",
            "$comment": "Computed automatically"
        },
        "modified": {
            "format": "date-time",
            "type": "string",
            "$comment": "Computed automatically"
        },
        "version": {
            "type": "integer",
            "$comment": "Computed automatically"
        },
        "checksum": {
            "type": "string",
            "$comment": "Computed automatically"
        },
        "size": {
            "type": "integer",
            "$comment": "Computed automatically"
        },
        "_deleted": {
            "description": "Whether the file has been marked as unavailable",
            "type": "boolean"
        },
        "child_of": {
            "items": {
                "anyOf": [
                    {
                        "$ref": "measurement_uuid.json"
                    },
                    {
                        "$ref": "sample_uuid.json"
                    },
                    {
                        "$ref": "experiment_uuid.json"
                    },
                    {
                        "$ref": "job_uuid.json"
                    }
                ]
            },
            "type": "array"
        },
        "derived_from": {
            "items": {
                "anyOf": [
                    {
                        "$ref": "file_uuid.json"
                    }
                ]
            },
            "type": "array"
        },
        "generated_by": {
            "items": {
                "anyOf": [
                    {
                        "$ref": "job_uuid.json"
                    }
                ]
            },
            "type": "array"
        }
    },
    "required": [
        "filename",
        "type",
        "child_of"
    ],
    "type": "object",
    "_filename": "fixity",
    "__collection": "fixities",
    "__uuid_type": "file",
    "__uuid_field": "filename",
    "__indexes": [],
    "__identifiers": [
        "uuid",
        "filename"
    ]
}
