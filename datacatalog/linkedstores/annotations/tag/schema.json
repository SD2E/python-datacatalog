{
    "additionalProperties": false,
    "description": "A tag annotation",
    "properties": {
        "name": {
            "description": "Tag name, comprised of DNS-safe alphanumeric characters)",
            "oneOf": [
                {
                    "type": "string",
                    "maxLength": 128,
                    "pattern": "^[0-9a-zA-Z][0-9a-zA-Z-.]{4,126}[0-9a-zA-Z]"
                }
            ]
        },
        "description": {
            "description": "Plaintext description of the tag. Only provides context, never critical information.",
            "oneOf": [
                {
                    "type": "string",
                    "maxLength": 256,
                    "value": ""
                }
            ]
        },
        "owner": {
            "oneOf": [
                {
                    "$ref": "tacc_username.json",
                    "description": "Account that manages this tag"
                },
                {
                    "type": "string",
                    "format": "email"
                }
            ]
        },
        "uuid": {
            "$comment": "Computed automatically",
            "$ref": "tag_annotation_uuid.json",
            "description": "UUID for the specific tag"
        },
        "_visible": {
            "type": "boolean",
            "value": true
        }
    },
    "required": [
        "name",
        "owner"
    ],
    "title": "TagAnnotation",
    "type": "object",
    "_filename": "tag_annotation",
    "__uuid_type": "tag_annotation",
    "__uuid_fields": [
        "name",
        "owner"
    ],
    "__collection": "tag_annotations",
    "__indexes": [],
    "__identifiers": [
        "uuid"
    ]
}
